---
import "@fontsource-variable/outfit";
interface Props {
  title: string;
  lang: string;
}

const { title, lang } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Personal Portfolio of Sebastian Diaz, Fullstack Developer and ORT University Student"
    />
    <meta
      name="author"
      content="Sebastian Diaz, sebastiandiazdopazo@gmail.com"
    />
    <meta name="copyright" content="Sebastian Diaz" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta property="og:image" content="/foto/preview.webp" />
    <meta property="og:image:width" content="960" />
    <meta property="og:image:height" content="720" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:email" content="sebastiandiazdopazo@gmail.com" />
    <meta property="og:type" content="website" />
    <meta name="url" content="https://sebasdiaz.com" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="fixed left-0 top-0 -z-10 h-full w-full">
      <div class="relative h-full w-full bg-neutral-900">
        <div
          class="absolute inset-0 bg-fuchsia-400 bg-[size:20px_20px] opacity-20 blur-[100px]"
        >
        </div>
      </div>
    </div>

    <slot />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: "Outfit Variable", system-ui, sans-serif;
    background-size: 224px;
    line-height: 1.5;
  }
</style>
